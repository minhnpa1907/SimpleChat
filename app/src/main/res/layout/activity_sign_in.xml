<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/sign_in_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-18.5dp"
            android:src="@drawable/text_app" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-3dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:src="@drawable/join" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_above="@+id/txtv_power"
            android:layout_marginBottom="57dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtv_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtv_about_me"
            android:layout_centerHorizontal="true"
            android:text="@string/powered_by_firebase"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtv_about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/about_me_click"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</layout>